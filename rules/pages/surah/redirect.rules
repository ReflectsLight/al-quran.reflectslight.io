#!/usr/bin/env ruby

##
# Rules for a redirect from the root path to the surah
# index for a given locale (eg / -> /en/)

compile "/html/pages/surah/redirect.html.erb" do
  filter(:erb)
  write("/index.html")
end

compile "/js/pages/surah/redirect.ts" do
  filter(:webpack)
  write("/js/pages/surah/redirect.js")
end
