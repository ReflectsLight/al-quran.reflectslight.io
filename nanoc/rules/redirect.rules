#!/usr/bin/env ruby
# frozen_string_literal: true

##
# Rules for a redirect from the root path to the surah index
# for a given locale (eg / -> /en/).

compile "/html/redirect.html.erb" do
  filter(:tidy)
  filter(:erb)
  write("/index.html")
end

compile "/js/main/redirect.ts" do
  filter(:webpack)
  write("/js/main/redirect.js")
end
