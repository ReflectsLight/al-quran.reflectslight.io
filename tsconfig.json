{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "lib": [ "ES2020", "DOM" ],

    "baseUrl": "src/",
    "paths": {
      "~/*": ["./js/*"],
      "@json/*": ["./json/*"]
    },
  }
}
