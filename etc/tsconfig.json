{
  "include": ["../src/**/*.ts", "../src/**/*.tsx"],
  "exclude": ["../node_modules"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [ "ES2020", "DOM" ],

    "baseUrl": "../src/",
    "paths": {
      "~/*": ["./js/*"],
      "@json/*": ["./json/*"]
    },
  }
}
