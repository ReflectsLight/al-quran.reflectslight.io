#!/bin/sh

sizes="16x16 32x32 48x48 64x64 128x128 256x256"
for size in ${sizes}; do
  convert src/favicon.svg \
          -gravity center \
          -resize ${size} \
          -background transparent \
          -transparent white \
          -extent ${size} \
          png32:src/favicon-${size}.png
done
